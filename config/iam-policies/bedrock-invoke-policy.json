{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "BedrockModelInvoke",
      "Effect": "Allow",
      "Action": [
        "bedrock:InvokeModel",
        "bedrock:InvokeModelWithResponseStream"
      ],
      "Resource": [
        "arn:aws:bedrock:${AWS_REGION}::foundation-model/anthropic.claude-3-haiku*",
        "arn:aws:bedrock:${AWS_REGION}::foundation-model/anthropic.claude-3-7-sonnet*",
        "arn:aws:bedrock:${AWS_REGION}::foundation-model/anthropic.claude-sonnet-4*",
        "arn:aws:bedrock:${AWS_REGION}::foundation-model/amazon.nova-lite*",
        "arn:aws:bedrock:${AWS_REGION}::foundation-model/amazon.nova-pro*",
        "arn:aws:bedrock:${AWS_REGION}::foundation-model/amazon.nova-micro*",
        "arn:aws:bedrock:*::foundation-model/us.anthropic.claude-3-haiku*",
        "arn:aws:bedrock:*::foundation-model/us.anthropic.claude-3-7-sonnet*",
        "arn:aws:bedrock:*::foundation-model/us.anthropic.claude-sonnet-4*",
        "arn:aws:bedrock:*::foundation-model/us.amazon.nova-lite*",
        "arn:aws:bedrock:*::foundation-model/us.amazon.nova-pro*",
        "arn:aws:bedrock:*::foundation-model/us.amazon.nova-micro*"
      ]
    }
  ]
}